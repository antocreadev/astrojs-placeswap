---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "PlaceSwap - L'application d'échange de places de parking gratuite",
  description = "PlaceSwap, l'application communautaire gratuite pour échanger vos places de parking. Fluidifiez la circulation, réduisez votre empreinte carbone. Bientôt disponible sur iOS et Android.",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo-placeswap.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="parking, échange places, gratuit, communautaire, écologique, circulation"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-slate-900 text-white font-sans antialiased">
    <slot />
  </body>
</html>
